<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.ObjectBuilder.StructureMap</AssemblyName>
    <NuSpecFileName>NServiceBus.StructureMap</NuSpecFileName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputPath>..\..\binaries\</OutputPath>
    <NoWarn>CS0419</NoWarn>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup>
    <Description>Adapter for the Structuremap IoC Container</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="StructureMap" Version="4.3.0" />
    <PackageReference Include="Janitor.Fody" Version="1.5.1" PrivateAssets="all" />
    <PackageReference Include="NServiceBus" Version="7.0.0-alpharelease0051" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.4" PrivateAssets="all" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="2.1.2" PrivateAssets="all" />    
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\GitVersion.yml" Link="GitVersion.yml" />
  </ItemGroup>
</Project>