<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <AssemblyName>NServiceBus.ObjectBuilder.StructureMap</AssemblyName>
    <NuSpecFileName>NServiceBus.StructureMap</NuSpecFileName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DocumentationFile>$(ProjectDir)bin\$(Configuration)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>CS0419</NoWarn>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="StructureMap" Version="4.4.2" />
    <PackageReference Include="Janitor.Fody" Version="1.4.1" />
    <PackageReference Include="NServiceBus" Version="6.0.0" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.2" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.0" />
    <PackageReference Include="NuGetPackager" Version="0.6.3" />
    <PackageReference Include="Fody" Version="2.1.0" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" />
    <None Include="..\..\packaging\nuget\NServiceBus.StructureMap.nuspec">
      <Link>NServiceBus.StructureMap.nuspec</Link>
    </None>
  </ItemGroup>
  <Target Name="BeforeBuildPackages" BeforeTargets="BuildPackages">
    <MakeDir Directories="$(SolutionDir)..\binaries" />
    <ItemGroup>
      <Files Include="$(TargetDir)$(TargetName).*" />
    </ItemGroup>
    <Copy SourceFiles="@(Files)" DestinationFolder="$(SolutionDir)..\binaries" />
  </Target>
</Project>